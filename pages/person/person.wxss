.about{
	background-color: #fff;
	margin-bottom: 5rpx;
}
.master-info{
	display: flex;
	justify-content: space-between;
	flex-direction: row;
	align-items: center;
	padding: 30rpx;
	background-color: #fff;
	margin-bottom: 30rpx;
}
.master-info image{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
}
.master-brief{
	height: 80rpx;
	padding-left: 40rpx;
	flex: 1;
	display: flex;
	justify-content: space-between;
	flex-direction: column;
	align-items: flex-start;
}
.master-user{
	font-size: 35rpx;
	letter-spacing: 1px;
}
.master-fans{
	color: #888;
  font-size: 25rpx;
}
.master-follow{
	color: #ddd;
	width: 100rpx;
  height: 50rpx;
  padding-top: 10rpx;
	border-radius: 30rpx;
	background-color: #999;
	text-align: center;

  font-size: 30rpx;
}
.bold{
	font-weight: bold;
	color: #000;
}
.master-intro {
	padding: 10rpx 30rpx;
	letter-spacing: 1px;
}
.detail{
	padding: 10rpx 50rpx 50rpx 50rpx;
	letter-spacing: 1px;
  font-size: 25rpx;
}
.quiz-wrapper{
	background-color: #fff;
	display: flex;
	justify-content: space-between;
	flex-direction: column;
	align-items: center;
	padding: 20rpx;
}
.quiz-info{
	color: rgb(0, 0, 0);
	padding: 20rpx;
  font-size: 30rpx;
}
.quiz-input {
	margin-bottom: 20rpx;
  font-size: 25rpx;
}
.quiz-input textarea{
	display: block;
	border-radius: 10rpx;
	height: 150rpx;
	width: 600rpx;
	padding: 30rpx;
	background-color: #fafafa;
	color: #ddd;
	border: 1rpx solid #ddd;
}
.quiz-cost{
	margin: 20rpx;
	font-size: 30rpx;
	color: #f85f48;
}
.submit{
	padding: 8rpx 35rpx;
	background-color: #f85f48;
	color: #fff;
	font-size: 14rpx;
	border-radius: 10rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.column-title{
	background-color: #fff;
	text-align: center;
	padding: 30rpx;
	font-size: 28rpx;
	color: #666;
  margin-top: 15rpx;
  margin-bottom: 10rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.scroll-view-item{
	background-color: #fff;
	padding: 25rpx;
	margin-bottom: 20rpx;
}

.item-ques{
	letter-spacing: 2px;
	word-spacing: 2px;
	font-size: 28rpx;
	line-height: 36rpx;
	color: #222;
}
