<scroll-view scroll-y="true" style="height: 100%;" bindscrolltoupper="upper" bindscrolltolower="lower">
	<block wx:for="{{feedList}}">
		<navigator class="scroll-view-item" url="../issue/issue?stamp={{item.stamp}}">
      <view class="item-ans">
        <image src="/images/avatar/{{item.masterAvatar}}" 
				mode="aspectFill" catchtap="toPerson" data-master="{{item.masterID}}"></image>
        <view>
				  <view class="item-pv">{{item.masterID}}</view>
        </view>
        <view class="start">
         <image  src="/images/start.png"></image>
        </view> 
      </view>
      
      <view class="item-time">{{item.time}}</view>

      <view>
        <text class="item-ques">{{item.question}}</text>
      </view>
		</navigator>
	</block>
</scroll-view>

<loading hidden="{{hidden}}">
	加载中...
</loading>
