/* pages/search/searchPage/searchPage.wxss */

.column-wrapper{
	margin-bottom: 15rpx;
}
.master-info{
  border-radius: 20rpx;
	border-top: 2rpx solid #efefef;
	display: flex;
	justify-content: space-between;
  margin-left: 27rpx;
  margin-right: 27rpx;
	flex-direction: row;
	align-items: center;
	padding: 30rpx;
	background-color: #fff;
}
.master-info image{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
}
.master-brief{
	height: 120rpx;
	padding-left: 40rpx;
	flex: 1;
	display: flex;
	justify-content: space-between;
	flex-direction: column;
	align-items: flex-start;
}
.master-user{
	font-size: 30rpx;
	letter-spacing: 1px;
  padding-top: 25rpx;
}
.master-intro {
	color: #888;
	width: 300rpx;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}
.master-fans{
	color: #888;
  padding-bottom: 25rpx;
}
.master-follow{
	color: #b22222;
	width: 80rpx;
	padding: 8rpx;
  margin-top: -20rpx;
	border-radius: 5rpx;
  border:2rpx solid #b22222;
	text-align: center;
  font-size: 20rpx;
}