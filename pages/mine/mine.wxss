    background-color: #fff;
    margin-bottom: 0rpx;
}

.img {
  width: 140rpx;
  height: 140rpx;
  margin: 44rpx;
  border-radius: 50%;
  display: flex;
  overflow:hidden;
}

.userset{
  display: flex;
  margin: -5rpx;
  flex-direction: row;
  align-items: left;
  justify-content: center;
  line-height:22pt
}

.nick{
  font-family:"Times New Roman";
  font-weight:300;
  letter-spacing:2rpx;
  font-size:20px;
}

.intro{
  font-family:"宋体";
  font-weight:500;
  color: rgb(158, 157, 157);
  font-size:12px;
}

.flex-wrp{
  display: flex;
  margin-top: 3rpx;
  flex-direction: row;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
