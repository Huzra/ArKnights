.profile-wrapper, .account-wrapper {
    margin-top: 30rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.profile, .account {
    display: flex;
    padding: 30rpx;
    align-items: center;
    flex-direction: row;
    border-bottom: 1rpx solid #f0f0f0;
}

.profile-item, .account-item {
    flex: 1;
    font-size: 24rpx;
}

.profile-arrow, .account-arrow {
    width: 32rpx;
    height: 32rpx;
}

